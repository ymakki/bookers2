<div class = "container">
  <div class = "row">
    <div class = "col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h1 class = "pt-3">Editing Book</h1>

      <%= form_with model: @book do |f| %>
      <p>Title</p>
      <%= f.text_field :title %>
      <p class = "pt-3">Opinion</p>
      <%= f.text_area :body %>
      <br>
      <span class = "mb-3"><%= f.submit 'Update Book', class: "mb-3 mt-2 btn btn-success" %></span>
      <br>
      <span><%= link_to "Show", book_path(@book.id) %></span>
      |
      <span><%= link_to "Back", books_path %></span>

      <% end %>

    </div>
  </div>
</div>

