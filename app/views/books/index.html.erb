<% if @book.errors.any? %>
  <%= @book.errors.count %>errors prohibited this obj from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<div class="container px-5 px-sm-0">
  <div class="row pt-3">
    <div class="col-md-3">
      <%= render 'list', book: @book, user: @user %>
    </div>
    <div class = "col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class = "table">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
            <tr>
              <td>
                <%= link_to user_path(book.id) do %>
                  <%= image_tag book.user.get_profile_image(100,100) %>
                <% end %>
              </td>
              <td><span><%= link_to book.title, book_path(book.id) %></span></td>
              <td><nobr><%= book.body %></nobr></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>