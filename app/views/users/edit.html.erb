<% if @user.errors.any? %>
  <%= @user.errors.count %>errors prohibited this obj from being saved:
  <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<div class = "container">
  <div class = "row">
    <div class = "col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2 class = "pt-3">User info</h2>

        <%= form_with model: @user do |f| %>

          <p>Name</p>
          <%= f.text_field :name ,class: "form-control" %>

          <p class = "pt-2">Image</p>
          <%= f.file_field :profile_image, accept: "image/*" %>

          <p class = "pt-3">Introduction</p>
          <%= f.text_area :introduction, class: "form-control"%>
          <br>

          <div class = "pt-3">
            <%= f.submit 'Update User', class: 'btn btn-secondary' %>
          </div>

        <% end %>

    </div>
  </div>
</div>